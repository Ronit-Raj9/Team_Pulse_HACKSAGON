{
  "name": "@impactchain/gateway",
  "version": "1.0.0",
  "description": "API Gateway for ImpactChain platform with GraphQL Federation and REST",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "dev": "nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@impactchain/libs": "workspace:*",
    "@nestjs/common": "^10.2.10",
    "@nestjs/core": "^10.2.10",
    "@nestjs/platform-fastify": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/microservices": "^10.2.10",
    "@nestjs/graphql": "^12.0.11",
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/throttler": "^5.0.1",
    "@apollo/gateway": "^2.5.7",
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.0",
    "apollo-server-fastify": "^3.12.1",
    "graphql": "^16.8.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "joi": "^17.11.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "nats": "^2.17.0",
    "fastify": "^4.24.3",
    "@fastify/helmet": "^11.1.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@fastify/rate-limit": "^9.0.1",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.26.0",
    "@opentelemetry/exporter-otlp-http": "^0.26.0",
    "@opentelemetry/instrumentation-http": "^0.26.0",
    "@opentelemetry/instrumentation-fastify": "^0.26.0",
    "@opentelemetry/instrumentation-graphql": "^0.26.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
